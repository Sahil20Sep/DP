#include <bits/stdc++.h> 
#define ll long long

int func(int i, vector<int> &h, vector<int> &dp){
    if(i == 0){
        return 0;
    }
    if(dp[i] != -1){
        return dp[i];
    }
    int ans = func(i - 1, h, dp) + abs(h[i] - h[i - 1]);
    if((i - 2) >= 0){
        ans = min(ans , func(i - 2, h, dp) + abs(h[i] - h[i - 2]));
    }
    return dp[i] = ans;
}

int frogJump(int n, vector<int> &h)
{
    vector<int> dp(n, -1);
    return func(n - 1, h, dp);
}
